<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SMSForwarder.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SMSForwarder"
    Shell.FlyoutBehavior="Flyout"
    Title="SMS Forwarder"
    FlyoutBackgroundColor="White"
    FlyoutWidth="260">
    

    <!-- Header del menú con safe area -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#2196F3" HeightRequest="140" Padding="20,40,20,20">
            <VerticalStackLayout VerticalOptions="Center" Spacing="8">
                <Label Text="SMS Forwarder" 
                       FontSize="20" 
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Start" />
                <Label Text="Control de mensajes" 
                       FontSize="12" 
                       TextColor="White"
                       Opacity="0.9"
                       HorizontalOptions="Start" />
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Configuración" Icon="settings.png">
        <ShellContent
            Title="Configuración"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>
    
    <FlyoutItem Title="Diagnósticos" Icon="info.png">
        <ShellContent
            Title="Diagnósticos"
            ContentTemplate="{DataTemplate local:DiagnosticsPage}"
            Route="DiagnosticsPage" />
    </FlyoutItem>
    
    <FlyoutItem Title="Acerca de" Icon="info.png">
        <ShellContent
            Title="Acerca de"
            ContentTemplate="{DataTemplate local:AboutPage}"
            Route="AboutPage" />
    </FlyoutItem>

    <!-- Footer del menú -->
    <Shell.FlyoutFooter>
        <Grid BackgroundColor="#F8F9FA" HeightRequest="60" Padding="20">
            <Label Text="v1.6.0 - sOCratic" 
                   FontSize="10" 
                   TextColor="#ADB5BD"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
        </Grid>
    </Shell.FlyoutFooter>

</Shell>
